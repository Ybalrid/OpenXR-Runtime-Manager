<Window x:Class="OpenXR_Runtime_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenXR_Runtime_Manager"
        mc:Ignorable="d"
        Title="OpenXR Runtime Manager" Height="450" Width="400">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label>Active Runtime : </Label>
        <Button Grid.Row="0" Grid.Column="1" Click="TestMe_Click">TestMe</Button>
    </Grid>
</Window>
